@using Nop.Core

@inject IWorkContext workContext

@{
    var supportRtl = workContext.WorkingLanguage.Rtl;

    var userAgent = Url.ActionContext.HttpContext.Request.Headers["User-Agent"];
    var isIe9 = false;
    if (!String.IsNullOrEmpty(userAgent) && userAgent.ToString().ToLower().IndexOf("MSIE 9.0", StringComparison.InvariantCultureIgnoreCase) > 0)
    {
        isIe9 = true;
    }

    if (isIe9)
    {
        Html.AppendCssFileParts("~/Themes/Minimal/Content/css/ie9-fix.css");
    }

    Html.AppendCssFileParts("~/Plugins/SevenSpikes.Core/Styles/perfect-scrollbar.min.css");

    if (supportRtl)
    {
        if (!String.IsNullOrEmpty(userAgent) && userAgent.ToString().IndexOf("Safari", StringComparison.InvariantCultureIgnoreCase) > 0 && userAgent.ToString().IndexOf("Chrome", StringComparison.InvariantCultureIgnoreCase) == -1)
        {
            Html.AppendCssFileParts("~/Themes/Minimal/Content/css/safari-fix.rtl.css");
        }

        Html.AppendCssFileParts("~/Themes/Minimal/Content/css/1920.rtl.css");
        Html.AppendCssFileParts("~/Themes/Minimal/Content/css/1600.rtl.css");
        Html.AppendCssFileParts("~/Themes/Minimal/Content/css/1366.rtl.css");
        Html.AppendCssFileParts("~/Themes/Minimal/Content/css/1280.rtl.css");
        Html.AppendCssFileParts("~/Themes/Minimal/Content/css/1024.rtl.css");
        Html.AppendCssFileParts("~/Themes/Minimal/Content/css/768.rtl.css");
        Html.AppendCssFileParts("~/Themes/Minimal/Content/css/480.rtl.css");
        Html.AppendCssFileParts("~/Themes/Minimal/Content/css/mobile-only.rtl.css");
        Html.AppendCssFileParts("~/Themes/Minimal/Content/css/tables.rtl.css");
        Html.AppendCssFileParts("~/Themes/Minimal/Content/css/styles.rtl.css");
    }
    else
    {
        Html.AppendCssFileParts("~/Themes/Minimal/Content/css/1920.css");
        Html.AppendCssFileParts("~/Themes/Minimal/Content/css/1600.css");
        Html.AppendCssFileParts("~/Themes/Minimal/Content/css/1366.css");
        Html.AppendCssFileParts("~/Themes/Minimal/Content/css/1280.css");
        Html.AppendCssFileParts("~/Themes/Minimal/Content/css/1024.css");
        Html.AppendCssFileParts("~/Themes/Minimal/Content/css/768.css");
        Html.AppendCssFileParts("~/Themes/Minimal/Content/css/480.css");
        Html.AppendCssFileParts("~/Themes/Minimal/Content/css/mobile-only.css");
        Html.AppendCssFileParts("~/Themes/Minimal/Content/css/tables.css");
        Html.AppendCssFileParts("~/Themes/Minimal/Content/css/styles.css");
    }

    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/footable.min.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/perfect-scrollbar.min.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/sevenspikes.core.min.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/sevenspikes.theme.ex.min.js");

    Html.AddScriptParts(ResourceLocation.Footer, "~/Themes/Minimal/Content/scripts/Minimal.js");
}
@using Nop.Core
@using Nop.Services.Localization
@using Nop.Web.Framework.Themes

@inject IThemeContext themeContext
@inject IStoreContext storeContext
@inject ILocalizationService localizationService

@model LogoModel

@{
    var logoPathWhite = $"~/Themes/{themeContext.WorkingThemeName}/Content/img/logo-white.png";
    var logoPathBlack = $"~/Themes/{themeContext.WorkingThemeName}/Content/img/logo-black.png";
}

@if (Context.Request.Path == "/")
{
    <div class="header-logo">
        <a href="@Url.RouteUrl("Homepage")" class="logo">
            @{
                string storeName = localizationService.GetLocalized(storeContext.CurrentStore, x => x.Name);
                <img title="" alt="@storeName" src="@Url.Content(logoPathWhite)" class="desktop-logo">
                <img title="" alt="@storeName" src="@Url.Content(logoPathBlack)" class="mobile-logo">
            }
        </a>
    </div>
}
else
{
    <div class="header-logo">
        <a href="@Url.RouteUrl("Homepage")" class="logo">
            @{
                string storeName = localizationService.GetLocalized(storeContext.CurrentStore, x => x.Name);
                <img title="" alt="@storeName" src="@Url.Content(logoPathBlack)">
            }
        </a>
    </div>
}